@model iCategory.ViewModels.ProductViewModel

@{
    ViewBag.Title= "Add Product";
}


@using (Html.BeginForm("Save", "AddProduct", FormMethod.Post))
{
<form>
    <table>
        <tr>
            <td>Product Name: </td>
            <td>@Html.TextBoxFor(m => m.Name)</td>
        </tr>
        <tr>
            <td>Product Price: </td>
            <td>@Html.TextBoxFor(m => m.Price)</td>
        </tr>     
            <tr>
                <td>
                    <select name="select">
                        @foreach(var category in Model.CategoriesVM)
                        {
                            <option value=@category.ID>@category.Name</option>
                        }
                    </select>
                </td>
            </tr>
        <tr>
            <td>
            <input type="submit" value="Add" />
            </td>
        </tr>
    </table>
</form>
}

